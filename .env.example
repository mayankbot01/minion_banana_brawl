# ================================================================
# .env.example - Stripe Minions Replica
# Copy this file to .env and fill in your credentials.
# NEVER commit your actual .env file to version control!
# ================================================================

# ---- LLM Backend (pick one) ----
# Options: auto (tries claude first, then openai), claude, openai, simulation
LLM_BACKEND=auto

# Anthropic Claude (recommended - matches Stripe's Claude 3.5 Sonnet backend)
ANTHROPIC_API_KEY=sk-ant-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI GPT-4o (alternative backend)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o

# LLM limits
LLM_MAX_TOKENS=4096
LLM_MAX_TOOL_TURNS=10

# ---- GitHub Integration ----
# Create a Personal Access Token with repo + issues permissions
GITHUB_TOKEN=ghp_your_token_here
# Your repo in owner/repo format
GITHUB_REPO=mayankbot01/minion_banana_brawl
# Label to put on GitHub Issues that should be picked up by Minions
GITHUB_MINION_LABEL=minion-task

# ---- Slack Bot Integration ----
# Create a Slack App at https://api.slack.com/apps
# Required scopes: app_mentions:read, chat:write, channels:history
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
# Socket Mode app-level token (starts with xapp-)
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_CHANNEL=#engineering

# ---- Sandbox (Docker) ----
SANDBOX_POOL_SIZE=3
SANDBOX_BASE_IMAGE=python:3.11-slim
SANDBOX_MEMORY=512m
SANDBOX_TIMEOUT=300

# ---- Orchestrator ----
# Stripe's hard limit: never change above 2 without careful consideration
MAX_RETRIES=2
REPO_PATH=.
ENABLE_PR=true
DEFAULT_BASE_BRANCH=main

# ---- Logging ----
DEBUG=false
LOG_LEVEL=INFO
